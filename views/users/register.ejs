

<% layout('layouts/boilerplate')%>

<link rel="stylesheet" href="stylesheet/style.css">
    <div class="wrapper">
        <div class="container main">
            <div class="row">
                <div class="col-md-6 side-image">
                   
                </div>
                <div class="col-md-6 right">
                     <div class="input-box">
                        <header>REGISTER</header>

                        <div class="card-body">
                            <form action="/register" method="POST" class="form-validation" novalidate>
                                <div class="mb-3">
                                    <label class="form-label" for="username">Username</label>
                                    <input class="form-control" type="text" id="username" name="username" required autofocus>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="email">Email</label>
                                    <input class="form-control" type="email" id="email" name="email" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="password">Password</label>
                                    <input class="form-control" type="password" id="password" name="password" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>
                                <button class="btn btn-success btn-block submit">Register</button>
                            </form>
                        </div>

                        <div class="signin">
                            <span>Already have an account? <a href="/login">Log in here</a></span>
                        </div>
                     </div>
                </div>
            </div>
        </div>
    </div>

